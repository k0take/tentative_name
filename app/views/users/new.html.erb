<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <%= form_with model: @user, local: true do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, placeholder: t('defaults.password8'), class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, placeholder: t('defaults.password_confirmation'), class: 'form-control' %>
        </div>
        <p class="agree mt-3 mb-4">
          アカウントを作成することにより、
          <%= link_to t('defaults.terms'), terms_of_service_path %>
          および
          <%= link_to t('defaults.privacy'), privacy_policy_path %>
          に同意するものとします。
        </p>
        <%= f.submit t('defaults.signup'), class: 'btn btn-primary' %>
      <% end %>
      <div class='text-center'>
        <%= link_to t('.to_login_page'), login_path %>
      </div>
    </div>
  </div>
</div>