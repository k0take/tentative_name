<% content_for(:title, t('.title')) %>
<table class="mb-5">
  <thead>
  </thead>
  <tbody>
    <div class="list">
      <div class="row">
        <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 mt-4">
          <% @lists.each do |list| %>
            <tr>
              <td>
                <div class="form-check">
                  <input type="checkbox" class="form-check-input" value="" id="formCheckDefault">
                  <label for="formCheckDefault" class="form-check-label mr-4">
                  </label>
                </div>
              </td>
              <td class="list_name"><%= list.name %></td>
              <td><%= button_to t('defaults.destroy'), list_path(list), method: :delete, class: "btn btn-info ml-4" %></td>
            </tr>
          <% end %>
        <div>
          <%= form_with model: @list, local: true do |f| %>
            <div class="form-group">
              <%= f.text_field :name, class: 'form-control', placeholder: "例）トマト" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</tbody>
</table>
