<header class="header">
  <nav class="navbar navbar-expand-lg navigation navbar-light">

    <div id="header_logo">
      <%= link_to root_path, class: "navbar-brand text-white" do %>
        <%= image_tag 'logo.png', class: "header_logo_size" %>
      <% end %>
    </div>

    <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto main-nav align-items-center">
        <div class="me-1">
          <li class="btn btn-outline-light rounded-pill">
            <%= link_to t('products.index.title'), products_path, class: 'text-black' %>
          </li>
        </div>
        <div class="me-1">
          <li class="btn btn-outline-light rounded-pill">
            <%= link_to '商品登録', new_product_path, class: 'text-black' %>
          </li>
        </div>
        <div class="me-1">
          <li class="btn">
            <%= button_to t('defaults.logout'), logout_path, class: 'dropdown-item', method: :delete %>
          </li>
        </div>
      </ul>
    </div>
  </nav>
</header>