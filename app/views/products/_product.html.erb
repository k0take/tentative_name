<div class="col-sm-12 col-lg-4 mb-3">
  <div id="product-id-<%= product.id %>">
    <div class="card">
      <div class="card-body">

        <% product.product_stores.each do |product_store| %>
          <%= product_store.store.name %>
          <%= product_store.regular_price %> 円
          <%= product_store.discounted_price %> 円
        <% end %>
        
        <% product.categories.each do |category| %>
          <%= link_to category.name, products_path(category_id: category.id), class:'badge rounded-pill bg-primary text-decoration-none text-white' %>
        <% end %>
        <%= link_to "編集", edit_product_path(product.id), class: "btn btn-light" %>
      </div>
    </div>
  </div>
</div>