<div class="col-sm-12 col-lg-4 mb-3">
  <div id="product-id-<%= product.id %>">
    <div class="card">
      <div class="card-body">
        <p class="card-text">商品名  <%= product.product_name %></p>
        <p class="card-text">通常価格  <%= product.regular_price %>円</p>
        <p class="card-text">特別価格  <%= product.discounted_price %>円</p>
      </div>
    </div>
  </div>
</div>