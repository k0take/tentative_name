<div class="col-sm-12 col-lg-4 mb-3">
  <div id="product-id-<%= product.id %>">
    <div class="card">
      <div class="card-body">
        <p class="card-text">商品名  <%= link_to product.product_name, product_path(product) %></p>
        <p class="card-text">通常価格  <%= product.regular_price %>円</p>
        <p class="card-text">特別価格  <%= product.discounted_price %>円</p>
        <% product.categories.each do |category| %>
          <%= link_to category.name, products_path(category_id: category.id), class:'badge rounded-pill bg-primary text-decoration-none text-white' %>
        <% end %>
        <%= link_to "編集", edit_product_path(product.id), class: "btn btn-light" %>
      </div>
    </div>
  </div>
</div>