<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <%= form_with model: @product, local: true do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
        <div class="form-group">
          <%= f.label :product_name %>
          <%= f.text_field :product_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :store_name %>
          <%= f.text_field :store_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :regular_price %>
          <%= f.text_field :regular_price, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :discounted_price %>
          <%= f.text_field :discounted_price, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :category_name %>
          <%= f.text_field :name, value: @category_list, placeholder:",で区切って入力してください", class: 'form-control' %>
        </div>
        <%= f.submit t('defaults.edit'), class: 'btn btn-primary' %>
        <%= link_to "戻る", products_path, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>