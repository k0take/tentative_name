<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <%= render 'search', url: products_path %>
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @products.present? %>
          <table class="table table-hover mt-5" style="table-layout:fixed;">
            <thead>
              <tr class="product_title">
                <th><%= t('.product_name') %></th>
                <th><%= t('.store_name') %></th>
                <th><%= t('.discounted_price') %></th>
                <th><%= t('.category_name') %></th>
              </tr>
            </thead>
          </table>
          <%= render @products %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
      <%= paginate @products, theme: 'bootstrap-5' %>
    </div>
  </div>
</div>