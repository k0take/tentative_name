<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <%= render 'search', url: products_path %>
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @products.present? %>
          <table class="table table-hover mt-5" style="table-layout:fixed;">
            <thead>
              <tr>
                <th>商品名</th>
                <th>店舗名</th>
                <th>通常価格</th>
                <th>特別価格</th>
                <th>カテゴリー</th>
              </tr>
            </thead>
          </table>
          <%= render @products %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>